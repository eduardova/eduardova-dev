mixin cardExperience(titleMsg, image, description)
  div(class="card col-10 m-2 col-md-5 m-md-4 col-lg-3 m-lg-5", style="display:flex; align-items:center; border-radius: 10%;")
    img(src=image, class="card-img-top", alt=titleMsg, style="max-width: 280px; margin: 10px; border-radius: 10px;")
    div(class="card-body")
      h5(class="card-title") #{titleMsg}
      hr/
      p(class="card-text") #{description}
